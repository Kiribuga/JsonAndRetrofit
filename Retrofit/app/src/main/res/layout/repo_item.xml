<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/nameRepo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/idRepo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/nameRepo"
        app:layout_constraintTop_toBottomOf="@id/nameRepo"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/visibilityRepo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/nameRepo"
        app:layout_constraintTop_toBottomOf="@id/idRepo"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/userOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/nameRepo"
        app:layout_constraintTop_toBottomOf="@id/visibilityRepo"
        tools:text="@tools:sample/full_names" />

</androidx.constraintlayout.widget.ConstraintLayout>